<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="towergame.controller.BattleController" 
            prefWidth="1000.0" prefHeight="700.0"
            style="-fx-background: linear-gradient(to bottom, #1a1a2e, #16213e, #0f3460);">
    <stylesheets>
        <String fx:value="/css/style.css" />
    </stylesheets>
    <children>
        <VBox fx:id="rootContainer" spacing="20.0" alignment="CENTER" 
              AnchorPane.leftAnchor="20.0" 
              AnchorPane.rightAnchor="20.0" 
              AnchorPane.topAnchor="20.0" 
              AnchorPane.bottomAnchor="20.0">
            
            <!-- Titre du jeu -->
            <Label text="âš”ï¸ TOWER BATTLE âš”ï¸" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ffd700; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.8), 10, 0, 0, 2);" />
            
            <!-- Turn and status labels -->
            <Label fx:id="turnLabel" text="Tour 1" 
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0, 0, 1);" />
            <Label fx:id="messageLabel" text="Le combat commence !" 
                   style="-fx-font-size: 16px; -fx-text-fill: #4ecdc4; -fx-font-weight: bold;" />
            
            <!-- Battle entities display -->
            <HBox spacing="100.0" alignment="CENTER" VBox.vgrow="ALWAYS" 
                  style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 15; -fx-padding: 30;">
                <!-- Enemy section -->
                <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: rgba(255,107,107,0.1); -fx-background-radius: 10;">
                    <Label text="ðŸ”¥ BOSS ðŸ”¥" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ff6b6b; -fx-effect: dropshadow(gaussian, rgba(255,107,107,0.6), 5, 0, 0, 1);" />
                    <ImageView fx:id="enemySprite" fitWidth="250.0" fitHeight="250.0" 
                               preserveRatio="true" pickOnBounds="true" 
                               style="-fx-effect: dropshadow(gaussian, rgba(255,0,0,0.4), 15, 0, 0, 5);" />
                    <Label fx:id="enemyName" styleClass="boss-name" 
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #ff6b6b; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0, 0, 2);" />
                    <Label fx:id="enemyHp" styleClass="boss-hp" 
                           style="-fx-font-size: 18px; -fx-text-fill: #ff6b6b; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 3, 0, 0, 1);" />
                </VBox>

                <!-- VS separator -->
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="âš”ï¸" style="-fx-font-size: 40px;" />
                    <Label text="VS" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #ffd700; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.8), 8, 0, 0, 2);" />
                    <Label text="âš”ï¸" style="-fx-font-size: 40px;" />
                </VBox>

                <!-- Player section -->
                <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: rgba(78,205,196,0.1); -fx-background-radius: 10;">
                    <Label text="ðŸ›¡ï¸ HÃ‰ROS ðŸ›¡ï¸" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4ecdc4; -fx-effect: dropshadow(gaussian, rgba(78,205,196,0.6), 5, 0, 0, 1);" />
                    <ImageView fx:id="playerSprite" fitWidth="250.0" fitHeight="250.0" 
                               preserveRatio="true" pickOnBounds="true" 
                               style="-fx-effect: dropshadow(gaussian, rgba(0,200,255,0.4), 15, 0, 0, 5);" />
                    <Label fx:id="playerName" styleClass="player-name" 
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4ecdc4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 5, 0, 0, 2);" />
                    <Label fx:id="playerHp" styleClass="player-hp" 
                           style="-fx-font-size: 18px; -fx-text-fill: #4ecdc4; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 3, 0, 0, 1);" />
                </VBox>
            </HBox>

            <Separator style="-fx-background-color: #ffd700; -fx-pref-height: 3;" />

            <!-- Actions section -->
            <VBox alignment="CENTER" spacing="15.0" 
                  style="-fx-background-color: rgba(0,0,0,0.4); -fx-background-radius: 15; -fx-padding: 25;">
                <Label text="âš¡ ACTIONS DISPONIBLES âš¡" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffd700; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.6), 5, 0, 0, 1);" />
                <HBox fx:id="actionsBox" spacing="15.0" alignment="CENTER" 
                      style="-fx-padding: 15;" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>
